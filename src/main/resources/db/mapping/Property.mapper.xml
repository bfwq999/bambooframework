<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC " -//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.bambooframework.dao.IPropertyDao">
	<resultMap type="org.bambooframework.entity.Property" id="propertyMap">
		<result column="ID_" jdbcType="VARCHAR" property="id"/>
		<result column="VALUE_" jdbcType="VARCHAR" property="value"/>
	</resultMap>

	<insert id="insert" parameterType="org.bambooframework.entity.Property" keyProperty="id">
		insert into T_PROPERTY(ID_,VALUE_)
		values(
			#{id,jdbcType=VARCHAR},
			#{value,jdbcType=VARCHAR}
		)
	</insert>
	
	<update id="update" parameterType="org.bambooframework.entity.Property">
		update T_PROPERTY set VALUE_=#{value,jdbcType=VARCHAR} where id_=#{id}
	</update>
	
	<select id="get" resultMap="propertyMap" parameterType="string">
		select * from T_PROPERTY where id_=#{id}
	</select>
	
	<select id="selectProperties" parameterType="map" resultMap="propertyMap">
		select * from T_PROPERTY
	</select>
</mapper>
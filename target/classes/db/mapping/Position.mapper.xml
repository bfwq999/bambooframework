<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC " -//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.bambooframework.dao.IPositionDao">
	<resultMap type="org.bambooframework.entity.Position" id="positionMap">
		<result column="ID_" jdbcType="VARCHAR" property="id"/>
		<result column="ORG_ID_" jdbcType="VARCHAR" property="orgId"/>
		<result column="NAME_" jdbcType="VARCHAR" property="name"/>
		<result column="COMMENT_" jdbcType="VARCHAR" property="comment"/>
	</resultMap>

	<insert id="insert" parameterType="org.bambooframework.entity.Position" keyProperty="id">
		insert into T_POSITION(ID_,ORG_ID_,NAME_,COMMENT_)
		values(
			#{id,jdbcType=VARCHAR},
			#{orgId,jdbcType=VARCHAR},
			#{name,jdbcType=VARCHAR},
			#{comment,jdbcType=VARCHAR}
		)
	</insert>
	<update id="update"  parameterType="org.bambooframework.entity.Position">
		update T_POSITION set
			ORG_ID_ = #{orgId,jdbcType=VARCHAR},
			NAME_ = #{name,jdbcType=VARCHAR},
			COMMENT_ = #{comment,jdbcType=VARCHAR}
		where ID_ = #{id}
	</update>
	
	<delete id="delete">
		delete T_POSITION where ID_ = #{id}
	</delete>
	
	<select id="get" parameterType="int" resultMap="positionMap">
		select * from T_POSITION where ID_ = #{id}
	</select>
	
	<select id="find" parameterType="map" resultMap="positionMap" >
		select * from T_POSITION
		<where>
			<if test="orgId != null">
				org_id_ =  #{orgId}
			</if>
		</where>
	</select>
</mapper>